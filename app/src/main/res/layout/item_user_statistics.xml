<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cart_view_margin_vertical"
        android:layout_marginLeft="@dimen/card_view_margin_horizontal"
        android:layout_marginRight="@dimen/card_view_margin_horizontal"
        card_view:cardCornerRadius="@dimen/profile_card_corner_radius"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/statistic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_toRightOf="@+id/icon_statistic"
                android:text="New Text"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statistic_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statistic_title"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_toRightOf="@+id/icon_statistic"
                android:text="New Text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_time" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>