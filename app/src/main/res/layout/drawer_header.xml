<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/drawer_light" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_profile_image"
        android:layout_width="@dimen/drawer_profile_radius"
        android:layout_height="@dimen/drawer_profile_radius"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:layout_marginTop="@dimen/profile_margin_top"
        android:src="@drawable/demo_profile"
        app:civ_border_color="@color/white_color"
        app:civ_border_width="@dimen/profile_image_border" />

    <TextView
        android:id="@+id/drawer_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/drawer_user_text_margin_bottom"
        android:layout_marginLeft="@dimen/drawer_user_text_margin_left"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/drawer_user_text_color_light"
        android:textSize="@dimen/drawer_user_text_size"
        android:textStyle="bold|italic" />
</FrameLayout>