<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_radius"
            android:layout_height="@dimen/profile_radius"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/profile_margin_top"
            android:src="@drawable/demo_profile"
            app:civ_border_color="@color/white_color"
            app:civ_border_width="@dimen/profile_image_border" />

        <TextView
            android:id="@+id/profile_first_second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/demo_first_name"
            android:textSize="@dimen/text_large" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:layout_marginTop="@dimen/profile_margin_top">

        <TextView
            android:id="@+id/text_current_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/text_current_distance"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:id="@+id/distance_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/text_current_distance"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_speed_value"
                android:textSize="@dimen/text_large" />

            <View
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/distance_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_speed_mes"
                android:textSize="@dimen/text_large" />
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/statistics_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_exit_to_app_white_48dp"
        app:backgroundTint="?attr/colorAccent"
        app:fabSize="normal" />

</RelativeLayout>
